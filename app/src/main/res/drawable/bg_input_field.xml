<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color with 50% alpha -->
    <solid android:color="#8030659A" />

    <!-- Border (stroke) without alpha -->
    <stroke
        android:width="2dp"
        android:color="#30659A" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />
</shape>